---
import "../styles/global.css";

const martFriends = [
  {name:"elAmigo", img: "./avatar 1.webp"},
  {name:"elAmigo", img: "./avatar.webp"},
  {name:"elAmigo", img: "./avatar 2.webp"},
  {name:"elAmigo", img: "./avatar 3.webp"},
  {name:"elAmigo", img: "./avatar 4.webp"},
  {name:"elAmigo", img: "./avatar 5.webp"},
]
---

<div class="hidden h-[34.375rem]" data-target="friends">

   <div class="grid grid-cols-2 h-[30rem] px-[3rem] py-[4rem] md:mask-none  overflow-scroll scroll-smooth gap-20 w-full md:px-20">
    {
  martFriends.map(friend => (
    <div class="memorial-card">
    <div class="photo-container">
      <img
        src={friend.img}
        alt={friend.name}
        class="memorial-photo mx-auto rounded-[27px] outline outline-[#141414] shadow-md"
      />
    </div>
    <div class="name-plate mt-2">
      <h3 class="person-name text-center tracking-widest font-[Knewave] md:text-[1.3rem]">{friend.name}</h3>
    </div>
  </div>
  ))
}
 </div>
</div>

